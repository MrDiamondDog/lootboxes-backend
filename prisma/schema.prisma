generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(cuid())
  discordId  String @unique
  username   String
  globalName String
  items      Item[]
}

model ItemCount {
  itemId String @id
  count  Int
}

model BoxCount {
  boxId String @id
  count Int
}

model Item {
  id      String @id
  name    String
  userId  String
  user    User   @relation(fields: [userId], references: [id])
  foundIn Box[]
}

model Box {
  id            String  @id
  name          String?
  possibleItems Item[]
}
